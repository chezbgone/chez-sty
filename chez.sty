\newcommand{\thmboxstyle}[4]{
	\ifchezcolor
		\mdfdefinestyle{#2}{
			linecolor = #3,
			backgroundcolor = #4,
		}
		\declaretheoremstyle[
			headfont = \sffamily\bfseries\color{#3},
			mdframed = {style = #2},
			headpunct = {\\[0.4pt]},
			postheadspace = {0pt}
		]{#1}
	\else
		\mdfdefinestyle{#2}{
			linecolor = black,
			backgroundcolor = white,
		}
		\declaretheoremstyle[
			headfont = \sffamily\bfseries\color{black},
			mdframed = {style = #2},
			headpunct = {\\[0.4pt]},
			postheadspace = {0pt}
		]{#1}
	\fi
}

